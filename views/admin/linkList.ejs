<% include header%>	
<ol class="breadcrumb">
    <li>
        <a href="#">友链管理</a>
    </li>
    <li class="active">友链列表</li>
</ol>
<table class='table'>
    <tr>
        <th>链接名称</th>
        <th>时间</th>
        <th>链接描述</th>
        <th>链接排序</th>
        <th>操作</th>
    </tr>
    <% listdata.forEach(function(val){ %>
    
        <tr>
            <td><%=val.name %></td>
            <td><%= val.ctime.toLocaleString() %></td>
            <td><%=val.description %></td>
            <td><%= val.order %></td>
            <td>
                <a href="/admin/linkEdit/<%=val._id %>">修改</a>|
                <a href="/admin/linkDel/<%=val._id %>" onclick="return confirm('是否删除')")>删除</a>
            </td>
        </tr>
        <% }) %>
</table>

<% include footer%>