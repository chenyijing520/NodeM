<% include header%>
<table class="table table-hover articleList">
        <tr>
            <th>封面</th>
            <th>更换封面</th>
            <th>歌曲名称</th>
            <th>演唱</th>
            <th>分类</th>
            <th>操作</th>
        </tr>

        <% listdata.forEach(function(val){ %>
            <tr>
                <td>
                        <!-- <%= val.imgurl%> -->
                    <img src="/<%= val.imgurl %>">
                </td>
                <td>
                        <a href="/admin/imgEdit/<%=val._id %>">更换</a>
                </td>
                <td>
                    <%= val.name%>
                </td>
                <td><%= val.sing%></td>
                <td><%= val.classId.name%></td>
                
                <td>
                    <a href="/admin/articleEdit/<%=val._id %>">修改</a>/
                     <a href="/admin/articleDel/<%=val._id %>" onclick='return(confirm("是否删除"))'>删除</a>
                    
                </td>
            </tr>
            <% })%>

    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li><a href="/admin/articleList?page=1">首页</a></li>
          <li>
            <a href="/admin/articleList?page=<%=page-1%>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <% for(var i=1;i<=maxPage;i++){%>
    
                <li><a href="/admin/articleList?page=<%=i%>"><%= i%></a></li>
    
          <%}%>
         
          
          <li>
            <a href="/admin/articleList?page=<%=page+1%>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
          <li><a href="/admin/articleList?page=<%=maxPage%>">未页</a></li>
    
        </ul>
      </nav>
<% include footer%>
