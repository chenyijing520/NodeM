<% include header%>

<ol class="breadcrumb">
        <li>
            <a href="#">分类管理</a>
        </li>
        <li class="active">修改栏目</li>
    </ol>
      <!-- 表单 -->
<div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
    
                <form action="/admin/classUp" class="userForm" method="POST">
                    <input type="hidden" name='_id' value='<%= data._id%>'>
                    <div class="input-group classAdd">
                        <span class="input-group-addon">分类名称</span>
                        <input type="text" class="form-control" name="name" value='<%= data.name%>'>
                    </div>
                    <div class="input-group classAdd">
                        <span class="input-group-addon">分类描述</span>
                        <input type="text" class="form-control" name="description"  value='<%= data.description%>'>
                    </div>
                    <div class="input-group classAdd">
                        <span class="input-group-addon">分类排序</span>
                        <input type="text" class="form-control" name="order"  value='<%= data.order%>'>
                    </div>
                    <div class="input-group classAdd">
                        <input type="submit">
                    </div>
                </form>
    
    
            </div>
            <div class="col-md-4"></div>
        </div>
    
    </div>
    <!-- 表单 end -->
    

<% include footer%>